# Frontend Environment Variables Example
# Copy this file and rename to .env.local for local development

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:8000
VITE_APP_ENV=local
VITE_APP_NAME=Shorty URL Shortener
VITE_APP_VERSION=1.0.0

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_SERVICE_WORKER=false

# ============================================
# AWS Configuration
# ============================================
VITE_AWS_REGION=us-east-1
VITE_CLOUDFRONT_DOMAIN=localhost:3000

# ============================================
# Performance Settings
# ============================================
VITE_CACHE_TIMEOUT=60000
VITE_REQUEST_TIMEOUT=5000

# ============================================
# Development Features
# ============================================
VITE_SHOW_PERFORMANCE_METRICS=true
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_MONITORING=false
VITE_HOT_RELOAD=true

# ============================================
# Environment Files Guide:
# ============================================
# .env.local      -> Local development (copy from this file)
# .env.staging    -> Staging deployment (ignored by git)
# .env.production -> Production deployment (ignored by git)
# .env.example    -> Template file (committed to git)

